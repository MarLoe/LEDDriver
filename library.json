{
    "name": "LEDDriver",
    "version": "0.2.0",
    "keywords": ["led", "control", "blink", "fade", "pwm", "async", "task", "core"],
    "description": "Arduino library for controlling standard LEDs.",
    "authors": 
    {    
        "name": "Martin Lobger",
        "maintainer": true
    },
    "license": "MIT",
    "frameworks": "arduino",
    "platforms": "*",
    "repository": 
    {
        "type": "git",
        "url": "https://github.com/MarLoe/LEDDriver.git"
    },
    "examples": [
        {
            "name": "led-basic",
            "base": "examples/led-basic",
            "files": ["led-basic.ino"]
        },       
        {
            "name": "led-blink",
            "base": "examples/led-blink",
            "files": ["led-blink.ino"]
        },
        {
            "name": "led-blink-advanced",
            "base": "examples/led-blink-advanced",
            "files": ["led-blink-advanced.ino"]
        },
        {
            "name": "led-blink-multi",
            "base": "examples/led-blink-multi",
            "files": ["led-blink-multi.ino"]
        },
        {
            "name": "led-fade",
            "base": "examples/led-fade",
            "files": ["led-fade.ino"]
        },
        {
            "name": "led-fade-manual",
            "base": "examples/led-fade-manual",
            "files": ["led-fade-manual.ino"]
        }                        
    ],
    "export": {
        "include":
        [
            "src/*",
            "include/*",
            "examples/*",
            "LICENSE",
            "README.md",
            "library.properties",
            "library.json",
            "keywords.txt"
        ],
        "exclude":
        [
            "src/main.cpp",
            ".gitignore",
            ".github/",
            ".git/",
            ".pio/",
            ".vscode/"
        ]
    }        
}